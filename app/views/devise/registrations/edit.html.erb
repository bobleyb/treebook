<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "well", :method => :put }) do |f| %>
      <fieldset>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>
        <%= devise_error_messages! %>

        <%= f.input :email %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.input :password %>

        <%= f.input :password_confirmation %>

        <%= f.input :current_password %>

        <%= f.button :submit, "Update" %>
      </fieldset>
    <% end %>

    <h3>Cancel my account</h3>
    <p><%= button_to "Cancel My Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
