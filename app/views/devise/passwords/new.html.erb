<div class="row">
	<div class="span4">
		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: "well", :method => :post }) do |f| %>

			<fieldset>
				<legend>Forgot Password</legend>
				<%= devise_error_messages! %>
				<%= f.input :email %>
				<%= f.button :submit, "Reset Password" %>
			<fieldset>
		<% end %>
	</div>
</div>